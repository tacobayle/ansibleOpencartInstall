<VirtualHost *:80>
    ServerAdmin webmaster@localhost
    ServerName opencart.{{ domain.name }}
    ServerAlias www.opencart.{{ domain.name }}
    DocumentRoot /var/www/opencart.{{ domain.name }}
    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

    <Directory /var/www/opencart.{{ domain.name }}>
          Options -Indexes
    </Directory>

    <IfModule mod_dir.c>
        DirectoryIndex index.php index.html index.cgi index.pl  index.xhtml index.htm
    </IfModule>

</VirtualHost>
